{
  "appId": "com.activitytracker.salesproductivity",
  "productName": "Activity Points Tracker",
  "directories": {
    "output": "dist"
  },
  "files": [
    "src/**/*",
    "package.json"
  ],
  "win": {
    "target": "nsis"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "mac": {
    "target": "dmg"
  },
  "linux": {
    "target": "AppImage"
  },
  "publish": {
    "provider": "github",
    "owner": "jorgezpina",
    "repo": "sales-productivity-tracker"
  }
}